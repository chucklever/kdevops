	bool "io1"
	help
	  All extra EBS volumes are "Provisioned IOPS SSD volumes"
	  version 1.

config TERRAFORM_AWS_EBS_VOLUME_TYPE_IO2
	bool "io2"
	help
	  All extra EBS volumes are "Provisioned IOPS SSD volumes"
	  version 2.

endchoice

