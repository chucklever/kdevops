	bool
	default n if TERRAFORM_AWS_EBS_VOLUME_TYPE_GP2
	default n if TERRAFORM_AWS_EBS_VOLUME_TYPE_GP3
	default y if TERRAFORM_AWS_EBS_VOLUME_TYPE_IO1
	default y if TERRAFORM_AWS_EBS_VOLUME_TYPE_IO2

